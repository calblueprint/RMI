<!--Login page-->
<div class="loginPageContainer">
  `<img src="<%= asset_pack_path 'images/rmi-logo.png' %>" height=100 width=100 />`
  <h1 class="loginHeader">Rocky Mountain Institute</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-container">
      <div class="field">
        <%= f.label :email, class: "input-label" %><br />
        <%= f.email_field :email, class: "input-box", placeholder: "email@rmi.org" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "input-label" %><br />
        <%= f.password_field :password, class: "input-box", autocomplete: "off" %>
      </div>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox-container">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me, class: "input-label checkbox-label"%>
        </div>
      <% end -%>
      <div class="login-buttons-container">
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn--primary primary-login-btn" %>
        </div>
        <div class="actions">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot password", new_password_path(resource_name), class: "btn btn--neutral"%><br />
          <% end -%>
        </div>
      </div>

  <% end %>
</div>
